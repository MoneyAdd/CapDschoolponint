<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.Studentjoin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="21dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="25dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="372dp"
            android:layout_height="826dp"
            android:layout_marginLeft="21dp"
            android:background="#ffffff"
            android:layout_marginRight="19dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="61dp"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="23dp"
                    android:text="학교찾기"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_findschool"
                        android:layout_width="280dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:hint="학교찾기"/>

                    <Button
                        android:id="@+id/btn_findschool"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:text="확인"
                        android:textColor="#ffffff"
                        android:background="@drawable/findschoolbtn"
                        android:textSize="10dp"/>


                </LinearLayout>


                <TextView
                    android:layout_width="82dp"
                    android:layout_height="23dp"
                    android:text="정보입력"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="회원가입에 필요한 정보를 입력해주세요."
                    android:layout_marginLeft="11dp"/>

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:hint="이름 입력."/>



                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/edt_usernickname"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:hint="닉네임 입력."/>


                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/edt_userid"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:hint="아이디 입력."/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/edt_userpw"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:hint="비밀번호 입력."/>

                <EditText
                    android:id="@+id/edt_userpww"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="15dp"
                    android:hint="비밀번호 확인."/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="본인 인증"
                    android:textStyle="bold"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="14dp"
                    android:textColor="#000000"/>

                <Button
                    android:layout_width="122dp"
                    android:layout_height="30dp"
                    android:text="휴대폰 인증"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/findschoolbtn"
                    android:id="@+id/btn_phoncertification"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottomline"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="14dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가입완료"
                        android:gravity="center"
                        android:id="@+id/registersave"/>

                </LinearLayout>




            </LinearLayout>



        </ScrollView>


    </LinearLayout>

</LinearLayout>