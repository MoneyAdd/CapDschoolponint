<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.Termspage1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:src="@drawable/back" />

        <TextView
            android:fontFamily="@font/pyeong"
            android:layout_width="65dp"
            android:layout_height="21dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="25dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <FrameLayout

        android:layout_width="352dp"
        android:layout_height="239dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/termspagestrock"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/pyeong"
                android:textStyle="bold"
                android:layout_width="112dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="약관동의"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:fontFamily="@font/pyeong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스쿨포인트에 가입하기 전,"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:fontFamily="@font/pyeong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원활한 서비스 이용과 개인정보 보호를 위하여"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:fontFamily="@font/pyeong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관의 동의가 필요합니다."
                android:textColor="#000000"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bottomline"
                android:layout_marginTop="20sp"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/pyeong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="필수"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:fontFamily="@font/pyeong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:text="이용자약관 및 개인정보 수집동의 >"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="false"
                    android:id="@+id/check"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[자세히보기]"
                    android:textSize="10dp"
                    android:id="@+id/tv_next"/>
            </LinearLayout>



        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/warning"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/woringtext"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:fontFamily="@font/pyeong"
            android:layout_width="0dp"
            android:id="@+id/btn_next"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:text="동의하고 계속하기"
            android:background="#F3F3F3"
            tools:ignore="Suspicious0dp" />

    </LinearLayout>
</LinearLayout>